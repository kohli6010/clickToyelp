<% include ../partials/header.ejs %>
<style>
    .image{
      padding: 0;
      height: 200px;
    }
</style>
<div class="container">
<header class="jumbotron">
    <h1>YelpCamp</h1>
    <p>your one stop destination for the best campgrounds around the world</p>
    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new campGround</a>
</header>
<div clas="row">
<% campgrounds.forEach(function(camp){ %>
    <div class="col-md-3 col-sm-6" style="text-align: center;">
        <div class="thumbnail">
            <img src=" <%= camp["image"]  %>" class="image">
        <div class="caption">
            <h3><%= camp["name"] %></h3>
        </div>
        <p>
            <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
        </p>
        </div>
        </div>
<% }); %>
</div>
</div>
<% include ../partials/footer.ejs %>