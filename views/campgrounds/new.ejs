<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New campground</h1>
        <div style="width: 30%; margin: 25px auto">        
        <form action="/campgrounds" method="POST">
            <div class="form-group">    
             <input type="text" class="form-control" placeholder="Campground name" name="name">
            </div>
             <div class="form-group">    
             <input type="number" class="form-control" placeholder="price" name="price" min="0.1" step="0.1">
            </div>
            <div class="form-group">
             <input type="text" class="form-control" placeholder="Image Url" name="image_url">
            </div>
            
            <div class="form-group">
             <input type="text" class="form-control" placeholder="description" name="description">
            </div>
            <div class="form-group">
             <button type="submit" class="btn btn-primary btn-block">Add the camp</button>
            <div class="form-group">
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>