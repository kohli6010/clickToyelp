<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto">
        <h1 style="text-align: center">Add a comment for <%=campground["name"]%></h1>        
        <form action="/campgrounds/<%= campground._id %>/comment" method="POST">
            <div class="form-group">
             <input type="text" class="form-control" placeholder="comment" name="comment[comment]">
            </div>
            <div class="form-group">
             <button type="submit" class="btn btn-primary btn-block">Add the comment</button>
            <div class="form-group">
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>